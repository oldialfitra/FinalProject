<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="/bootstrap-4.2.1-dist/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" media="screen" href="/myshare.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
</head>

<body>

<a href="/user/logout">Log Out</a>
    <ul>
        <li class="logo">
            <img src="/icon-left-font-monochrome-black.png">
        </li>
        <li>
            <form action="/user/<%=output.username%>" class="search" method='POST'>
                <input name="user" type="text" placeholder="Search">
                <button class="btn btn-danger" type="submit">Search</button>
            </form>
            <%= typeof msg != 'undefined' ? msg : '' %>
            <form action="/user/upload" method="POST" enctype="multipart/form-data" class="upload">
                <br>
                <input name="myFile" type="file">
                <button type="submit" class="btn btn-warning">Submit</button>
            </form>
        </li>
        <li class="username">
            <h6>Hi, <%=output[0].username%></h6>
        </li>
    </ul>
    <br><br>

    <table class="table">
        <tr>
            <th></th>
            <th>file name</th>
            <th>actions</th>
        </tr>
        <% output[0].Files.forEach(e => {%>
        <tr>
            <td><i class="fas fa-folder fa-1g"></i></td>
            <td><%= e.name %></td>
            <td><a href="/user/<%= e.id %>/update/">edit file</a> | <a href="/user/<%= e.id%>/delete">delete</a> </td>
        </tr>
        <%})%>
    </table>
</body>

</html>